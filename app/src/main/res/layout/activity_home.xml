<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/black_shade1">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/qrcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20pt"
        android:id="@+id/qrcode"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qrcode"
        android:id="@+id/qrcode_heading"
        android:layout_marginTop="4pt"
        android:gravity="center"
        android:textAlignment="center"
        android:padding="4dp"
        android:text="Welcome to QR code scanner and \n QR code Generator"
android:textSize="20sp"
        android:textStyle="bold"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Generate QR code"
        android:textAllCaps="false"
        android:background="@drawable/button_back"
        android:layout_below="@id/qrcode_heading"
        android:id="@+id/generator"
        android:layout_marginTop="35pt"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Scan QR code"
        android:textAllCaps="false"
        android:background="@drawable/button_back"
        android:layout_below="@id/generator"
        android:id="@+id/scanner"
        android:layout_marginTop="35pt"
        />
</RelativeLayout>