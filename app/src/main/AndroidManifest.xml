<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ruia.species">

    <application
        android:allowBackup="true"
        android:icon="@drawable/specieslogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/specieslogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SPECIES"
        tools:targetApi="31">
        <activity
            android:name=".BotanyMainActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".FullScrnImage"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Botany_Specimen_Details"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ModelCheck"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Home"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SpecimenDetails"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MaintenancePanel"
            android:exported="false" />
        <activity
            android:name=".AdminPanel"
            android:exported="false" />
        <activity
            android:name=".Scanner"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUP"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignIN"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AR"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />
    </application>
    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />
    <uses-feature android:name="android.hardware.camera.any" />

    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>